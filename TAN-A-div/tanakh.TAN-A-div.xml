<TAN-A-div xmlns="tag:textalign.net,2015:ns" TAN-version="1" id="tag:kalvesmaki@gmail.com,2014:tanakh.TAN-A-div">
   <head>
      <name>Div-based alignment of multiple versions of the Tanakh</name>
      <desc>This file takes the "Old Testament" preserved in very different traditions--Hebrew,
         Septuagint, and late Christian--and both reconciles differences and facilitates alignment.
      </desc>
      <master-location href="https://raw.githubusercontent.com/Arithmeticus/TAN-bible/master/TAN-A-div/tanakh.TAN-A-div.xml"/>
      <rights-excluding-sources include="HEAD"/>
      <inclusion xml:id="HEAD">
         <IRI>tag:kalvesmaki@gmail.com,2014:bible.TAN-A-div</IRI>
         <name>Div-based alignment of multiple versions of the Bible</name>
         <location href="HEAD.bible.TAN-A-div.xml" when-accessed="2015-10-02-04:00"/>
      </inclusion>
      <source xml:id="bhs">
         <IRI>tag:kalvesmaki.com,2014:tanakh.hbo.bhs.1993</IRI>
         <name>Hebrew OT: BHS (Consonants &amp; Vowels)</name>
         <location href="../tanakh.hbo.bhs.1987.xml" when-accessed="2015-10-12-04:00"/>
      </source>
      <source xml:id="ot-kjv">
         <IRI>tag:kalvesmaki.com,2014:ot-eng-kjv.1760</IRI>
         <name>Old Testament, King James Version of the Bible, 1760 edition</name>
         <location href="../ot.eng.kjv.1760.xml" when-accessed="2015-10-12-04:00"/>
      </source>
      <source xml:id="lxx">
         <IRI>tag:kalvesmaki.com,2014:lxx-grc-1979-rahlfs.TAN-T.001</IRI>
         <name>Greek Septuagint, Rahlfs's edition</name>
         <location href="../lxx.grc.rahlfs.xml" when-accessed="2014-10-23"/>
      </source>
      <declarations>
         <token-definition src="lxx" which="general-words-only-1"/>
         <token-definition src="ot-kjv" which="general-1"/>
      </declarations>
      <agent include="HEAD"/>
      <role include="HEAD"/>
      <change when="2015-10-12" who="kalvesmaki">Started file</change>
   </head>
