<?xml-model href="http://textalign.net/release/1/dev/schemas/TAN-A-div.sch" type="application/xml" schematypens="http://purl.oclc.org/dsdl/schematron"?> -->
<TAN-A-div xmlns="tag:textalign.net,2015:ns" TAN-version="1"
    id="tag:kalvesmaki@gmail.com,2014:bible.TAN-A-div.1">
    <head>
        <name>Div-based alignment of multiple versions of the Bible</name>
        <master-location>https://raw.githubusercontent.com/Arithmeticus/TAN-bible/master/TAN-A-div/bible.div.1.xml</master-location>
        <rights-excluding-sources rights-holder="kalvesmaki">
            <IRI>http://creativecommons.org/licenses/by/4.0/deed.en_US</IRI>
            <name>Creative Commons Attribution 4.0 International License</name>
            <desc>This license is granted independent of rights and licenses associated with the
                source. </desc>
        </rights-excluding-sources>
        <source xml:id="kjv">
            <IRI>tag:kalvesmaki.com,2014:ot-eng-kjv.001.TAN-T.001</IRI>
            <name>Bible (including apocrypha), King James Version</name>
            <location when-accessed="2014-10-23">../bible.eng.kjv.xml</location>
        </source>
        <source xml:id="lxx">
            <IRI>tag:kalvesmaki.com,2014:lxx-grc-1979-rahlfs.TAN-T.001</IRI>
            <name>Greek Septuagint, Rahlfs's edition</name>
            <location when-accessed="2014-10-23">../lxx.grc.rahlfs.xml</location>
        </source>
        <source xml:id="nt-grc">
            <IRI>tag:kalvesmaki.com,2014:nt-grc-2010-sbl.TAN-T.001</IRI>
            <name>Greek New Testament, SBL edition</name>
            <location when-accessed="2014-10-23">../nt.grc.sbl-2010.xml</location>
        </source>
        <source xml:id="nt-syr">
            <IRI>tag:kalvesmaki.com,2014:nt-syr-1905-BFBS</IRI>
            <name>1905 Bible Society Syriac New Testament</name>
            <location when-accessed="2014-11-04">../nt.syr.bfbs-1905.xml</location>
        </source>
        <declarations>
            <implicit-div-type-refs src="lxx kjv nt-grc nt-syr"/>
            <rename-div-ns src="kjv" div-type-ref="book">
                <rename old="Matt" new="Mt"/>
                <rename old="Mark" new="Mk"/>
                <rename old="Luke" new="Lu"/>
                <rename old="John" new="Jn"/>
                <rename old="Acts" new="Ac"/>
                <rename old="Rom" new="Ro"/>
                <rename old="1Cor" new="1Co"/>
                <rename old="2Cor" new="2Co"/>
                <rename old="Phil" new="Php"/>
                <rename old="1Thess" new="1Th"/>
                <rename old="2Thess" new="2Th"/>
                <rename old="Phlm" new="Phm"/>
                <rename old="Jas" new="Jam"/>
                <rename old="1Pet" new="1Pe"/>
                <rename old="2Pet" new="2Pe"/>
                <rename old="1John" new="1Jn"/>
                <rename old="2John" new="2Jn"/>
                <rename old="3John" new="3Jn"/>
                <rename old="Jude" new="Jud"/>
                <rename old="Rev" new="Re"/>
            </rename-div-ns>
        </declarations>
        <agent xml:id="kalvesmaki" roles="creator">
            <IRI>http://viaf.org/viaf/299582703</IRI>
            <IRI>tag:kalvesmaki@gmail.com,2014:self</IRI>
            <name xml:lang="eng">Joel Kalvesmaki</name>
        </agent>
        <role xml:id="creator">
            <IRI>http://schema.org/creator</IRI>
            <name xml:lang="eng">creator</name>
        </role>
        <change when="2015-09-03" who="kalvesmaki">Altered aligns to realigns, added Psalm realigns.</change>
        <change when="2014-10-23" who="kalvesmaki">Started file</change>
        <comment when="2015-08-06" who="kalvesmaki">File does not yet reconcile Septuagint and
            non-Septuagint reference systems.</comment>
    </head>
    <body>
        <equate-works src="lxx kjv nt-grc"/>
        <comment when="2015-09-03" who="kalvesmaki">I retain traditional names for LXX books</comment>
        <realign>
            <anchor-div-ref src="kjv" ref="1Sm"/>
            <div-ref src="lxx" ref="1Kgdms"/>
        </realign>
        <realign>
            <anchor-div-ref src="kjv" ref="2Sm"/>
            <div-ref src="lxx" ref="2Kgdms"/>
        </realign>
        <realign>
            <anchor-div-ref src="kjv" ref="1Kgs"/>
            <div-ref src="lxx" ref="3Kgdms"/>
        </realign>
        <realign>
            <anchor-div-ref src="kjv" ref="2Kgs"/>
            <div-ref src="lxx" ref="4Kgdms"/>
        </realign>
        <realign>
            <anchor-div-ref src="kjv" ref="Ezra"/>
            <div-ref src="lxx" ref="1Esd"/>
        </realign>
        <realign>
            <anchor-div-ref src="kjv" ref="Neh"/>
            <div-ref src="lxx" ref="2Esd"/>
        </realign>
        <realign>
            <anchor-div-ref src="kjv" ref="AddEsth"/>
            <div-ref src="lxx" ref="Esth"/>
        </realign>

        <realign>
            <anchor-div-ref src="kjv" ref="Ps 9 1 - Ps 10 18"/>
            <div-ref src="lxx" ref="Ps 9 2 - Ps 9 39"/>
        </realign>
        <realign>
            <anchor-div-ref src="kjv" ref="Ps 11 - Ps 113 | Ps 117 - Ps 146"/>
            <div-ref src="lxx" ref="Ps 10 - Ps 112 | Ps 116 - Ps 145"/>
        </realign>
        <realign>
            <anchor-div-ref src="kjv" ref="Ps 114 1 - Ps 115 18"/>
            <div-ref src="lxx" ref="Ps 113:1 - Ps 113:26"/>
        </realign>
        <realign>
            <anchor-div-ref src="kjv" ref="Ps 116 1 - Ps 116 19"/>
            <div-ref src="lxx" ref="Ps 114 1 - Ps 115 10"/>
        </realign>
        <realign>
            <anchor-div-ref src="kjv" ref="Ps 147 1 - Ps 147 20"/>
            <div-ref src="lxx" ref="Ps 146 1 - Ps 147 9"/>
        </realign>
    </body>
</TAN-A-div>
